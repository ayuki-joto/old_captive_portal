<p>
  <strong><%= t('auth_identity.login') %></strong>
</p>

<%= form_tag "/auth/identity/callback" do %>
  <div class="field">
    <%= label_tag :auth_key, t('auth_identity.auth_key') %><br>
    <%= text_field_tag :auth_key %>
  </div>
  <div class="field">
    <%= label_tag :password, t('auth_identity.password') %><br>
    <%= password_field_tag :password %>
  </div>
  <%= hidden_field_tag request_forgery_protection_token, form_authenticity_token(form_options: {action: '/auth/identity/callback', method: :post}) %>
  <%= hidden_field_tag 'origin', params[:origin] %>
  <%= hidden_field_tag 'locale', I18n.locale %>
  <div class="actions"><%= submit_tag t('auth_identity.login') %></div>
<% end %>

<p>
  <%= t('auth_identity.pre_description') %>
  <%= link_to t('auth_identity.create_an_account'), auth_identity_register_path(origin: params[:origin]) %>
  <%= t('auth_identity.post_description') %>
</p>
